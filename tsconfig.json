{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
         "@controllers/*": [".src/controllers/*"],
         "@models/*": ["./src/models/*"],
         "@config/*": ["./src/config/*"],
         "@utils/*": ["./src/utils/*"],
         "@enums/*": ["./src/enums/*"],
         "@interfaces/*": ["./src/interfaces/*"],
         "@routes/*": ["./src/routes/*"]
      }
   }
}